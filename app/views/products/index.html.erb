<div id="" class="grid_12 ">

  <p><%= link_to "< Back to Farm", @farm %></p>

  <p style="color: green"><%= flash[:notice] %></p>

  <h1>Products:</h1>

  <table class="order_form">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Estimated</th>
    </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%=h product.name %></td>
      <td><%=h product.description %></td>
      <td><%=h number_to_currency product.price %></td>
      <td><%=h product.estimated %></td>
      <td><%= link_to 'Edit', edit_product_path(product, :farm_id => @farm.id) %></td>
      <td><%= link_to 'Destroy', {:action => "destroy", :id => product.id, :farm_id => @farm.id}, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New product', new_product_path(:farm_id => @farm.id) %>
</div>