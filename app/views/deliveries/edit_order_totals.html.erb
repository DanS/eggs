<div id="" class="grid_12 ">

<p style="color: green"><%= flash[:notice] %></p>

<h5><%= link_to "delivery: #{@delivery.name}", delivery_path(:farm_id => @farm.id) %><br/>
<%= "#{@delivery.pretty_date}" %></h5>
<h5>Locations:</h5>
<table class="deliveries_picker">
  <% @delivery.locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.host_name %></td>
      <td><%= location.address %></td>
    </tr>
  <% end %>
</table>


<% form_for @delivery do |f| %>
<%= hidden_field_tag :farm_id, @farm.id %>


<table class="simple">
  <tr class="hed">
    <th>Last Name</th>
    <th>First Name</th>
    <% @delivery.stock_items.each do |item| %>
      <th><%= item.product_name %><br/>
        <%= item.product_price_code %><br/>
      </th>
    <% end %>

    <th>Notes</th>
    <th>Estimated Total</th>
    <th>Finalized Total</th>
  </tr>

  <tr class="hed">
    <th>totals:</th>
    <th></th>
    <% @delivery.stock_items.each do |item| %>
      <th><%= item.quantity_ordered %></th>
    <% end %>
  </tr>

    <% @delivery.orders.each do |order| %>
      <% f.fields_for :orders, order do |builder| %>
        <tr>
          <td><%= order.member.last_name %></td>
          <td><%= order.member.first_name %></td>

          <% order.order_items.each do |item| %>
            <td><%= item.quantity %></td>
          <% end %>

          <td><%= order.notes %></td>
          <td><%= number_to_currency order.estimated_total %></td>
          <td>$<%= builder.text_field :finalized_total, :size => 5 %></td>

        </tr>
      <% end %>
    <% end %>
</table>

<div style="float:right"><%= f.submit "Update" %></div>
<% end %>


</div>

