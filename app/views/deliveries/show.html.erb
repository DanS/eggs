<div id="" class="grid_8 ">

<p><%= link_to "< Back to Farm", @farm %></p>

<p style="color: green"><%= flash[:notice] %></p>


<h2><%= "delivery: #{@delivery.name}" %><br/>
<%= "#{@delivery.pretty_date}" %></h2>
<h5>Current Status: <%= "#{@delivery.status.upcase}"%></h5>




<% if @delivery.description != nil %>
<p>
  <b>Description:</b>
  <%=h @delivery.description %>
</p>
<% end %>

<% if @delivery.notes != nil %>
<p>
  <b>Notes:</b>
  <%=h @delivery.notes %>
</p>
<% end %>

<div class="box_header"><h4>Orders: <%= link_to "(add order)", new_order_path(:farm_id => @farm.id, :as_admin => true, :delivery_id => @delivery.id)%></h4></div>


<table class="simple">
  <tr class="hed">
    <th>Name</th>
    <th>Items (num)</th>
    <th><%= (@delivery.orders.first && @delivery.orders.first.finalized_total) ? "Finalized Total" : "Estimated Total" %></th>
    <th>Balance</th>
    <th>Joined</th>
  </tr>

  <% @delivery.orders.each do |o|%>
      <%= render :partial => 'orders/order_mini', :locals => { :o => o} %>
  <% end %>

</table>


<div class="box_header"><h4>Stock Items:</h4></div>
<table class="simple">
  <tr class="hed">
    <th>Name</th>
    <th>Ordered</th>
    <th>Available</th>
    <th>Remaining</th>
  </tr>
    <% @delivery.stock_items.each do |s|%>
      <tr>
          <td><%= s.product_name %></td>
          <td><%= s.quantity_ordered %></td>
          <td><%= s.quantity_available %></td>
          <td><%= s.quantity_remaining %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="grid_4">
  <p></p>
  <div class="box_header"><h4>delivery Details: <%= link_to "(edit)", edit_delivery_path(@delivery, :farm_id => @farm.id)%></h4></div>
    <div class="box_content">
      <p>
        <b>Location:</b>          <%=h @delivery.location %> <%= link_to "(map)", @delivery.map_link, :target => "_blank"%><br/>
        <b>Host:</b>              <%=h @delivery.host %><br/>
        <b>Orders open at:</b>    <%=h @delivery.formatted_opening_at %><br/>
        <b>Orders close at:</b>   <%=h @delivery.formatted_closing_at %><br/>
        <b>Current total:</b>
          <% if @delivery.finalized_total > 0 %>
            <%=h "#{number_to_currency @delivery.finalized_total}" %> (finalized)<br/>
          <% else %>
            <%=h "#{number_to_currency @delivery.estimated_total}" %> (estimated)<br/>
          <% end %>
      </p>
    </div>

  <p></p>
  <div class="box_header"><h4>Manage delivery:</h4></div>
    <div class="box_content">
      <p>
        <%= link_to "View Worksheet", :controller => 'deliveries', :action => 'show_sheet', :id => @delivery.id, :farm_id => @farm.id %><br/>
        <%= link_to "Enter Finalized Totals", :controller => 'deliveries', :action => 'edit_order_totals', :id => @delivery.id, :farm_id => @farm.id %><br/>

        <%= link_to "Export as CSV", delivery_path(@delivery, :csv, :farm_id => @farm.id) %><br/>
        <%= link_to "Export as TSV", delivery_path(@delivery, :csv, :farm_id => @farm.id, :tabs => true) %> (copy/paste to gDocs)<br/>
        <%= link_to "Export Labels", delivery_path(@delivery, :pdf, :farm_id => @farm.id) %> (PDF)<br/><br/>
        <%= link_to 'Delete Delivery', { :id => @delivery.id,
                                       :farm_id => @farm.id},
                                       :confirm => 'This action will delete all orders associated with this delivery.  Are you sure you want to continue?',
                                       :method => :delete %>

      </p>
  </div>

</div>

