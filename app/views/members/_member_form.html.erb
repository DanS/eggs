
<% form_for(@member) do |f| %>
  <%= hidden_field_tag :farm_id, @farm.id %>

  <%= f.error_messages :header_message => "Member signup failed",
                          :message => "You'll need to fix the following fields:",
                          :header_tag => :h4 %>

  <fieldset class="login">
    <legend>New Member Info</legend>

    <p>
      <label>First Name</label>
      <%= f.text_field :first_name, :size => "20" %>
    </p>

    <p>
      <label>Last Name</label>
      <%= f.text_field :last_name, :size => "20" %>
    </p>

    <p>
      <label>Email Address</label>
      <%= f.text_field :email_address %>
    </p>

    <p>
      <label>Alternate email</label>
      <%= f.text_field :alternate_email %>
    </p>

    <p>
      <label>Phone number</label>
      <%= f.text_field :phone_number %>
    </p>

    <p>
      <%= f.label :neighborhood %>
      <%= f.text_field :neighborhood %>
    </p>

    <p>
      <label>Address</label>
      <%= f.text_area :address, :size => "30x3" %>
    </p>



  <%= f.submit 'Submit', :class => "login button" %>

  </fieldset>

<% end %>