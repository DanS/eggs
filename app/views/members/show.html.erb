<div class="grid_12">
    <%= link_to "< Back to Farm", @farm %>
    <div class="nav_divider"/>
</div>

<div id="" class="grid_8 alpha">

  <p style="color: green"><%= flash[:notice] %></p>



  <h4>Member Information <%= link_to '(Edit)', edit_member_path(@member, :farm_id => @farm.id) %></h4>
  <p>
    <b>Member Name:</b>
    <%=h "#{@member.first_name} #{@member.last_name}" %><br/>
    <b>Email address:</b>
    <%=h @member.email_address %><br/>
    <b>Phone number:</b>
    <%=h @member.phone_number %><br/>
    <b>Neighborhood:</b>
    <%=h @member.neighborhood %>
  </p>



  <div class="box_header"><h5>Orders:</h5></div>
  <table class="simple">
    <tr class="hed">
      <th>ID</th>
      <th>Delivery</th>
      <th>Date</th>
      <th>delivery Status</th>
      <th>Estimated Total</th>
      <th>Actual Total</th>
    </tr>
    <% @member.orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order, :farm_id => @farm.id) %></td>
        <td><%= link_to order.delivery.name, delivery_path(order.delivery, :farm_id => @farm.id) %></td>
        <td><%= order.delivery.date %></td>
        <td><%= order.delivery.status %></td>
        <td><%= number_to_currency order.estimated_total %></td>
        <td><%= number_to_currency order.finalized_total %></td>
      </tr>
    <% end %>
  </table>

</div>

<div id="sidebar" class="grid_4 omega">
  <p></p>
  <div class="box_header">
    <h5>Account Balance:</h5>
  </div>
  <div class="box_content">
    <h4><%= number_to_currency @subscription.current_balance %></h4>
    <div><%= link_to "balance details", transactions_path(:farm_id => @farm.id, :member_id => @member.id)%> </div>
  </div>
</div>