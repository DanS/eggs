<div id="" class="grid_8 ">

  <p style="color: green"><%= flash[:notice] %></p>

  <%= link_to 'Edit', edit_member_path(@member, :farm_id => @farm.id) %>
  
  <p>
    <b>Member:</b>
    <%=h "#{@member.first_name} #{@member.last_name}" %>
  </p>

  <p>
    <b>Email address:</b>
    <%=h @member.email_address %>
  </p>

  <p>
    <b>Phone number:</b>
    <%=h @member.phone_number %>
  </p>

  <p>
    <b>Neighborhood:</b>
    <%=h @member.neighborhood %>
  </p>



  <div class="box_header"><h5>Orders:</h5></div>
  <table class="simple">
    <tr class="hed">
      <th>ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Pickup Status</th>
      <th>Estimated Total</th>
      <th>Actual Total</th>
    </tr>
    <% @member.orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order, :farm_id => @farm.id) %></td>
        <td><%= order.pickup.name %></td>
        <td><%= order.pickup.date %></td>
        <td><%= order.pickup.status %></td>
        <td><%= number_to_currency order.estimated_total %></td>
        <td><%= number_to_currency order.finalized_total %></td>
      </tr>
    <% end %>
  </table>

</div>

<div id="sidebar" class="grid_4">
  <p></p>
  <div class="box_header">
    <h5>Account Balance:</h5>
  </div>
  <div class="box_content">
    <h4><%= number_to_currency @subscription.current_balance %></h4>
    <div><%= link_to "balance details", transactions_path(:farm_id => @farm.id, :member_id => @member.id)%> </div>
  </div>
</div>