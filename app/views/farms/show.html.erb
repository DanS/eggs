<div class="grid_12">
  <h2 id="page-heading"><%= "#{@farm.name} - Home" %></h2>
</div>
<p style="color: green"><%= flash[:notice] %></p>

<div class="grid_8">
  <h1>Deliveries:</h1>
  <ul class="menu">
    <li><%= link_to "Add New Delivery", new_delivery_path(:farm_id => @farm.id) %></li>
  </ul>
  <div class="box">
    <h2>Finalized (ready for delivery!):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_finalized.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>In Progress (not accepting orders):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_inprogress.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>Open (currently accepting orders):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_open.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>Not Yet Open:</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_notyetopen.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>  

  <div class="box">
    <h2>Archived deliveries:</h2>
    <div class="block">
      <ul class="menu">      
      <% @deliveries_archived.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>      
    </div>
  </div>



</div>

<div class="grid_4">
  <div class="box">
    <h2>Manage Farm</h2>
    <div class="block">
      <ul class="menu">
        <li><%= link_to "Schedule new Delivery", new_delivery_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "View / Manage Products", products_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "View / Manage Members", members_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "View / Manage Locations", locations_path(:farm_id => @farm.id)%></li>
      </ul>
    </div>
  </div>
</div>
