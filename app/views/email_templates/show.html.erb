<div class="grid_8">
  <h2 id="page-heading">Email Template: <%=h @email_template.name %></h2>

  <p>
    <b>Identifier:</b>
    <%=h @email_template.identifier %>
  </p>
  <p>
    <b>From:</b>
    <%=h @email_template.from %>
  </p>

  <p>
    <b>Bcc:</b>
    <%=h @email_template.bcc %>
  </p>
  <p>
    <b>Cc:</b>
    <%=h @email_template.cc %>
  </p>
  <div class="box">
    <b>Subject: </b>
    <span class="template_code"><%=h @email_template.subject %></span><hr/>
    <b>Body:</b><br/><br/>
    <div class='template_code'><%= simple_format @email_template.body %></div>
  </div>
  <hr/>
  
  <p>
    <b>Notes (Object access, etc. Doesn't show in actual email):</b>
    <div><%= simple_format @email_template.notes %></div>
  </p>

  <%= link_to 'Edit', edit_email_template_path(@email_template, :farm_id => @farm.id) %> |
  <%= link_to 'Back to Email Templates', email_templates_path(:farm_id => @farm.id) %>
</div>
