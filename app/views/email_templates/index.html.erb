<div class="grid_12">
<h2 id="page-heading">Listing Email Templates</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Subject</th>
    <th>From</th>
    <th>Bcc</th>
    <th>Cc</th>
    <th>Body</th>
    <th>Id</th>
  </tr>

<% @email_templates.each do |email_template| %>
  <tr>
    <td><%=h email_template.name %></td>
    <td><%=h email_template.subject %></td>
    <td><%=h email_template.from %></td>
    <td><%=h email_template.bcc %></td>
    <td><%=h email_template.cc %></td>
    <td><%=h truncate(email_template.body, :length => 40) %></td>
    <td><%=h email_template.identifier %></td>
    <td><%= link_to 'Show', email_template_path(:id => email_template.id, :farm_id => @farm.id) %></td>
    <td><%= link_to 'Edit', edit_email_template_path(email_template, :farm_id => @farm.id) %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => email_template.id, :farm_id => @farm.id},
                    :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Email Template', new_email_template_path(:farm_id => @farm.id) %>
</div>
