<div class="grid_12">
  <h1 id="branding">EggBasket<%= " - #{@farm.name}" if @farm %></h1>
</div>
<div class="clear"></div>

<div class="grid_12">
  <ul class="nav main">
    <% if current_user %>
      <% if current_user.has_role?(:admin) %>
        <% if @farm %>
          <li><%= link_to "Home", @farm %></li>
          <li><%= link_to "Members", members_path(:farm_id => @farm.id) %></li>
        <% end %>
      <% elsif current_user.has_role?(:member) %>
        <li><%= link_to "Home", current_user %></li>
      <% end %>
    <% end %>

    <li class="secondary">
      <% if current_user %>
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Log in", login_path %>
      <% end %>
    </li>
    <% if current_user && current_user.has_role?(:member) %>
      <li class="secondary">
        <%= link_to "#{current_user.member.first_name} #{current_user.member.last_name}", edit_user_path(:id => current_user.id, :farm_id => @farm.id) %>
      </li>
    <% end %>
  </ul>
</div>