<div id="" class="grid_12 ">

<p style="color: green"><%= flash[:notice] %></p>

<h5><%= link_to "Pickup: #{@pickup.name}", pickup_path(:farm_id => @farm.id) %><br/>
<%= "#{@pickup.pretty_date}" %></h5>
<p>
  <b>Location:</b>          <%=h @pickup.location %> <%= link_to "(map)", @pickup.map_link, :target => "_blank"%><br/>
  <b>Host:</b>              <%=h @pickup.host %><br/>
</p>
<% form_for @pickup do |f| %>
<%= hidden_field_tag :farm_id, @farm.id %>


<table class="simple">
  <tr class="hed">
    <th>First Name</th>
    <th>Last Name</th>
    <% @pickup.stock_items.each do |item| %>
      <th><%= item.product_name %><br/><%= item.quantity_ordered %></th>
    <% end %>

    <th>Notes</th>
    <th>Estimated Total</th>
    <th>Finalized Total</th>
  </tr>

    <% @pickup.orders.each do |order| %>
      <% f.fields_for :orders, order do |builder| %>
        <tr>
          <td><%= order.member.first_name %></td>
          <td><%= order.member.last_name %></td>

          <% order.order_items.each do |item| %>
            <td><%= item.quantity %></td>
          <% end %>

          <td><%= order.notes %></td>
          <td><%= number_to_currency order.estimated_total %></td>
          <td><%= builder.text_field :finalized_total, :size => 5 %></td>

        </tr>
      <% end %>
    <% end %>
</table>

<div style="float:right"><%= f.submit "Update" %></div>
<% end %>


</div>

