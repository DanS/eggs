<h1><%= "Pickup: #{@pickup.name}" %><br/>
<%= "#{@pickup.pretty_date}" %></h1>
<h3>Status: <%= "#{@pickup.status.upcase}"%></h3>

<p>
  <b>Location:</b>          <%=h @pickup.location %> <%= link_to "(map)", @pickup.map_link, :target => "_blank"%><br/>
  <b>Host:</b>              <%=h @pickup.host %><br/>
  <b>Orders open at:</b>    <%=h @pickup.formatted_opening_at %><br/>
  <b>Orders close at:</b>   <%=h @pickup.formatted_closing_at %><br/>
  <b>Current total:</b>     <%=h "#{number_to_currency @pickup.estimated_total}" %><br/>
</p>


<% if @pickup.description != nil %>
<p>
  <b>Description:</b>
  <%=h @pickup.description %>
</p>
<% end %>

<% if @pickup.notes != nil %>
<p>
  <b>Notes:</b>
  <%=h @pickup.notes %>
</p>
<% end %>

<h2>Orders:</h2>


<table class="simple">
  <tr class="hed">
    <th>Name</th>
    <th>Items (num)</th>
    <th>Total (est)</th>
  </tr>

  <% @pickup.orders.each do |o|%>
      <%= render :partial => 'orders/order_mini', :locals => { :o => o} %>
  <% end %>

</table>


<h2><%= link_to "Stock Items:", stock_items_path(:pickup_id => @pickup.id)%></h2>


<p>
<% @pickup.stock_items.each do |s|%>
      <%= link_to "#{s.product.name}", stock_item_path(s)%><br/>
<% end %>
</p>


<%= link_to 'Edit', edit_pickup_path(@pickup) %> |
<%= link_to 'Back', pickups_path %>