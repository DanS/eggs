<div id="" class="grid_12 ">

<p style="color: green"><%= flash[:notice] %></p>
  
<h5><%= link_to "Pickup: #{@pickup.name}", pickup_path(:farm_id => @farm.id) %><br/>
<%= "#{@pickup.pretty_date}" %></h5>
<p>
  <b>Location:</b>          <%=h @pickup.location %> <%= link_to "(map)", @pickup.map_link, :target => "_blank"%><br/>
  <b>Host:</b>              <%=h @pickup.host %><br/>
  <b>Status:</b>            <%=h @pickup.status %>
</p>

<table class="simple">
  <tr class="hed">
    <th>Timestamp</th>
    <th>Last Name</th>
    <th>First Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Pickup</th>
    <% @pickup.stock_items.each do |item| %>
      <th><%= item.product_name %><br/>
        <%= item.product_price_code %><br/>
        <%= item.quantity_ordered %></th>
    <% end %>

    <th>Notes</th>
    <th>Old Account Balance</th>
    <th>Estimated Bag Total</th>
    <th>Finalized Bag Total</th>
    <th>Updated Balance</th>
  </tr>

  <% @pickup.orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.member.first_name %></td>
      <td><%= order.member.last_name %></td>
      <td><%= order.member.email_address %></td>
      <td><%= order.member.phone_number %></td>
      <td><%= order.pickup.name %></td>

      <% order.order_items.each do |item| %>
        <td>
          <% if item.quantity == 0 %>
            <span class="zero_quantity">
              <%= item.quantity %>
            </span>
          <% else %>
            <span class="has_quantity">
              <b><%= item.quantity %></b>
            </span>
          <% end %>
        </td>
      <% end %>

      <td><%= order.notes %></td>
      <td>$59.59</td>
      <td><%= number_to_currency order.estimated_total %></td>
      <td><%= number_to_currency order.finalized_total %></td>
      <td>$29.62</td>

    </tr>
  <% end %>

</table>




</div>
