<p>
  <b>Member:</b>
  <%= link_to "#{@order.member.first_name} #{@order.member.last_name}", member_path(@order.member) %>

</p>

<p>
  <b>Pickup:</b>
  <%= link_to "#{@order.pickup.name} - #{@order.pickup.pretty_date}", pickup_path(@order.pickup) %>
</p>

<p>
  <b>Notes:</b>
  <%=h @order.notes %>
</p>

<p>
  <b>order items:</b><br/>
<% @order.order_items.each do |item| %>
  <%= link_to "#{item.stock_item.product.name}", stock_item_path(item.stock_item) %><%= ", quantity: #{item.quantity}"%><br/>  

<% end %>
</p>

