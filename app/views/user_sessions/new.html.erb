<div id="" class="grid_12 ">
<p style="color: green"><%= flash[:notice] %></p>

<% form_for @user_session do |form| %>
<%= form.error_messages %>
  <p>
    <%= form.label :email, "Email" %>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit "Login" %>
  </p>
<% end %>
</div>