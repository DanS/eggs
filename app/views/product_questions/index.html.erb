<div id="" class="grid_12">


  <p style="color: green"><%= flash[:notice] %></p>

  <h1>Questions:</h1>
  <%= link_to 'New question', new_product_question_path(:farm_id => @farm.id) %>
  

  <table class="simple">
    <thead>
    <tr>
      <th>Description</th>
      <th>Short Code</th>
      <th>Options</th>
    </tr>
    </thead>

  <% @product_questions.each do |product_question| %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%=h product_question.description %></td>
      <td><%=h product_question.short_code %></td>
      <td><%= simple_format product_question.options %></td>
      <td><%= link_to 'Edit', edit_product_question_path(product_question, :farm_id => @farm.id) %></td>
      <td><%= link_to 'Destroy', {:action => "destroy", :id => product_question.id, :farm_id => @farm.id}, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

</div>